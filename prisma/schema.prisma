generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Profession {
  STUDENT
  PROFESSIONAL_DEVELOPER
  HOBBYIST
  FRONTEND_DEVELOPER
  BACKEND_DEVELOPER
  FULLSTACK_DEVELOPER
  UI_UX_DESIGNER
  DEVOPS_ENGINEER
  QA_ENGINEER
  SECURITY_ENGINEER
  DATA_SCIENTIST
  AI_ML_ENGINEER
  PRODUCT_MANAGER
  PROJECT_MANAGER
  TECHNICAL_WRITER
  CONTENT_CREATOR
  COMMUNITY_MANAGER
  EDUCATOR
  FOUNDER
  IT_SUPPORT
  BUSINESS_ANALYST
  SMART_CONTRACT_DEVELOPER
  BLOCKCHAIN_DEVELOPER
  WEB3_DEVELOPER
  SOLIDITY_DEVELOPER
  DAPP_DEVELOPER
  TOKENOMICS_SPECIALIST
  NFT_DEVELOPER
  DEFI_DEVELOPER
  WEB3_SECURITY_AUDITOR
  BLOCKCHAIN_ARCHITECT
  OTHER
}

enum ReferralSource {
  SOCIAL_MEDIA
  FRIEND_COLLEAGUE
  ONLINE_SEARCH
  OTHER
}

enum PipelineInterest {
  YES
  NO
  NOT_SURE
}

model EventRegistration {
  id                    String          @id @default(cuid())
  firstName             String
  lastName              String
  email                 String          @unique
  isCommunityMember     Boolean
  location              String
  locationOther         String?         // if location is others
  openSourceKnowledge   Int             @db.SmallInt // 1-10 scale
  
  // New survey fields
  profession            Profession[]    @default([OTHER])
  professionOther       String?         // if profession is OTHER
  referralSource        ReferralSource  @default(OTHER)
  newsletterSub         Boolean         @default(false)
  pipelineInterest      PipelineInterest @default(NOT_SURE)
  interests             String?         // Specific topics/tech interested in
  communityDetails      String?         // If community member, specify which

  createdAt             DateTime        @default(now())
  
  @@map("event_registrations")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      Role       @default(USER)
  createdAt DateTime   @default(now())

  @@map("users")
}


